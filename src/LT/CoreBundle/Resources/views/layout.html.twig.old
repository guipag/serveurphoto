{# src/LT/PhotosBundle/Resources/views/layout.html.twig #}
<!DOCTYPE HTML>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <!--<link href="//raw.github.com/jharding/typeahead.js-bootstrap.css/master/typeahead.js-bootstrap.css" rel="stylesheet" media="screen">-->
    <script src="{{ asset('bundles/LTPhotos/js/typeahead.bundle.js') }}"></script>
    {% block stylesheets %}
         <link rel="stylesheet" href="{{ asset('bundles/LTPhotos/css/style.css') }}">
    {% endblock %}
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <title>{% block title %}Serveur photos de l'ENS Cachan{% endblock %}</title>
  </head>

  <body>
    {% block navbar %}
	{% include "LTCoreBundle::navbar.html.twig" %}
    {% endblock %}

    <div class="container" style="margin-top:5mm">
      <header class="page-header">
        <h1>Serveur photos du campus de Cachan</h1>
        {% block header %}{% endblock %}
      </header>

      <section class="row">
        {% block body %}
        {% endblock %}  
      </section>  
    </div>

<script type="text/javascript">

$(document).ready(function(){
  var suggestUrl = $('#search').attr('data-suggest');
  $('#search').typeahead({
    minLength: 3,
 
    source: function(query, process) {
      var $this = this;
      $.ajax({
        url: suggestUrl,
        type: 'GET',
        data: {
          search: query,
        },
        success: function(data) {
          var reversed = {};
          var suggests = [];
 
          $.each(data, function(id, elem) {
            reversed[elem.suggest] = elem;
            suggests.push(elem.suggest);
          });
 
          $this.reversed = reversed;
 
          process(suggests);
        }
      })
    },
 
    updater: function(item) {
      var elem = this.reversed[item];
 
      return elem.tag;
    },
 
    matcher: function() {
      return true;
    }
  });
});
</script>

    <footer class="footer">
      <div class="container">
	<center><p class="text-muted">Serveur photos du campus de Cachan | Ce serveur est maintenu par des élèves</p></center>
      </div>
    </footer>
  </body>
</html>
