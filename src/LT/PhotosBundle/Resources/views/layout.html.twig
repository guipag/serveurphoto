{# src/LT/PhotosBundle/Resources/views/layout.html.twig #}
<!DOCTYPE HTML>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-1.11.2.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    {% block stylesheets %}
         <link rel="stylesheet" href="{{ asset('bundles/LTPhotos/css/style.css') }}">
    {% endblock %}
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <title>{% block title %}Serveur photos de l'ENS Cachan{% endblock %}</title>
  </head>

  <body>
    {% block navbar %}
	{% include "LTPhotosBundle::navbar.html.twig" %}
    {% endblock %}

    <div class="container">
      <header class="page-header">
        <h1>Serveur photo - ENS Cachan</h1>
        {% block header %}{% endblock %}
      </header>

      <section class="row">
        {% block body %}
        {% endblock %}  
      </section>  
    </div>

    <footer class="footer">
      <div class="container">
	<center><p class="text-muted">Serveur photo de l'ENS Cachan | Ce serveur photo est maintenu par des élèves | c 2015-2016 | <a href="#">Administration</a></p></center>
      </div>
    </footer>
  </body>
</html>
