<table class="table table-bordered table-striped table-condensed table-responsive">
  <thead>
    <tr>
      <th>Id</th>
      <th>Nom</th>
      <th>Slug</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
  <tr><td colspan="5"><a class="btn btn-success" href="{{ path('event_new') }}">Ajouter un évènement</a></td></tr>

  {% for entity in entities %}
    <tr {% if asPhotosToValidate(entity) %}class="danger"{% endif %}>
      <td><a href="{{ path('event_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
      <td>{{ entity.name }}</td>
      <td>{{ entity.slug }}</td>
      <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
      <td>
        <a class="btn btn-primary" href="{{ path('lt_photos_base') ~ 'admin/' ~ scolarYear(entity.date) ~ '/' ~ entity.slug ~ '/gallery' }}">voir</a>
        <a class="btn btn-primary" href="{{ path('event_edit', { 'id': entity.id }) }}">éditer</a>
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>

