{% extends 'LTCoreBundle::layout.html.twig' %}

{% block body -%}
    <h1>{{ 'Event'|trans }}</h1>

    <table class="table table-bordered table-striped table-condensed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

<h1>Statistiques</h1>

<table class="table table-striped table-bordered table-condensed">
<thead>
<tr>
<td>Nombre photos publiées</td>
<td>Nombre photos censurées</td>
</tr>
</thead>
</table>

{{ form_start(delete_form, {'attr':{'class': 'form form-horizontal'}}) }}
<div class="btn btn-group btn-group-justified" role="group" aria-label="Justified button group">
  <div class="btn-group" role="group">
    <a href="{{ path('event') }} class="btn btn-default">{{ 'Back to the list'|trans }}</a>
  </div>
  <div class="btn-group" role="group">
    <a href="{{ path('event_edit', {'id': entity.id}) }}" class="btn btn-primary">{{ 'Edit'|trans }}</a>
  </div>
  <div class="btn-group" role="group">
    {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-danger'}}) }}
  </div>
</div>
{{ form_rest(delete_form) }}
{{ form_end(delete_form) }}

{% endblock %}
