$(document).ready(function() {
    var table = $('#event_datatable');
 
    $('#event_datatable tbody').on( 'click', 'tr', function () {
        if ( $(this).hasClass('selected') ) {
            $(this).removeClass('selected');
        }
        else {
            $(".selected").removeClass('selected');
            $(this).addClass('selected');
        }
    } );
 
} );

