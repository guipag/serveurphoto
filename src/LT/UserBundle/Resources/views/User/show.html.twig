{% extends 'LTCoreBundle::layout.html.twig' %}

{% block body -%}
    <h1>{{ 'User'|trans }}</h1>

    <table class="table table-striped table-condensed">
        <tbody>
            <tr>
                <th>{{ 'Id'|trans }}</th>
                <td>{{ entity.id }}</td>
            </tr>
	    <tr>
		<th>{{ 'Username'|trans }}</th>
		<td>{{ entity.username }}</td>
	    </tr>
	    <tr>
		<th>{{ 'Mail'|trans }}</th>
		<td>{{ entity.email }}</td>
	    </tr>
	    <tr>
		<th>{{ 'Last login'|trans }}</th>
		<td>{{ entity.lastLogin|date("d/m/Y") }}</td>
	    </tr>
	    <tr>
		<th>{{ 'Enabled'|trans }}</th>
		<td>{{ entity.enabled }}</td>
	    </tr>
	    <tr>
		<th>{{ 'Locked'|trans }}</th>
		<td>{{ entity.locked }}</td>
	    </tr>
	    <tr>
		<th>{{ 'Roles'|trans }}</th>
		<td>{% for role in entity.roles %}['{{ role }}'] {% endfor %}</td>
	    <tr>
        </tbody>
    </table>

{{ form_start(delete_form, {'attr': {'class': 'form form-horizontal'}}) }}


<div class="btn-group btn-group-justified" role="group" aria-label="Justified button group">
  <div class="btn-group" role="group">
    <a href="{{ path('user') }}" class="btn btn-default">{{ 'Back to the list'|trans }}</a>
  </div>
  <div class="btn-group" role="group">
    <a href="{{ path('user_edit', { 'id': entity.id }) }}" class="btn btn-primary">{{ 'Edit'|trans }}</a>
  </div>
  <div class="btn-group" role="group">
{{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-danger'}}) }}
  </div>
</div>

{{ form_rest(delete_form) }}

{{ form_end(delete_form) }}

{% endblock %}
