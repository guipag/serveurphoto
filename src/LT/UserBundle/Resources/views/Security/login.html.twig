{% extends "LTCoreBundle::layout.html.twig" %}

{% block body %}

{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form class="col-lg-6 form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
    <div class="form-group">
        <legend>Connexion</legend>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <div class="row">    
        <div class="form-group">
            <label for="username" class="col-lg-4 control-label">{{ 'security.login.username'|trans }}</label>
            <div class="col-lg-8">
                <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label for="password" class="col-lg-4 control-label">{{ 'security.login.password'|trans }}</label>
            <div class="col-lg-8">
                <input type="password" id="password" class="form-control" name="_password" required="required" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <div class="col-lg-4"></div>
            <div class="col-lg-8">
              <input type="checkbox" id="remember_me" class="control-label" name="_remember_me" value="on" />
              <label for="remember_me" class="control-label">{{ 'security.login.remember_me'|trans }}</label>
            </div>
        </div>
    </div>

    <div class="row">
      <div class="col-lg-4"></div>
        <div class="col-lg-8">
          <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié</a>
        </div>
    </div>

    <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>

<aside class="col-lg-6">
    <legend>Inscription</legend>
    <a class="btn btn-default" href="{{ path('fos_user_registration_register') }}"><i class="glyphicon glyphicon-user"></i> Créer un compte utilisateur !</a>
<br />
<br />
OU
<br />
<br />
    <a class="btn btn-default" href="{{ path('photograph_new_sa') }}"><i class="glyphicon glyphicon-camera"></i> Créer un compte photographe !</a>
</aside>

{% endblock %}
